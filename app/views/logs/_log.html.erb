<div id="<%= dom_id log %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Registered on:</strong>
    <%= log.registered_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= log.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this log", log, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this log", edit_log_path(log), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
