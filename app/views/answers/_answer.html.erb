<div id="<%= dom_id answer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= answer.user_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Question:</strong>
    <%= answer.question_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Log:</strong>
    <%= answer.log_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is good:</strong>
    <%= answer.is_good %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this answer", answer, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this answer", edit_answer_path(answer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
